<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div>
  <div>
    <%= form_for(@user) do |u| %>
      <%= render 'shared/error_messages' %>
      <%= u.label :name %>
      <%= u.text_field :name %>
      <br>
      <%= u.label :email %>
      <%= u.email_field :email %>
      <br>
      <%= u.label :password %>
      <%= u.password_field :password %>
      <br>
      <%= u.label :password_confirmation, "Confirmation" %>
      <%= u.password_field :password_confirmation %>
      <br>
      <%= u.submit "Create my account" %>
    <% end %>
  </div>
</div>